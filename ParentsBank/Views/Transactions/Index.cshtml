@model IEnumerable<ParentsBank.Models.Transaction>

@{
    ViewBag.Title = "Index";
}

<h2>Transactions</h2>

<p>
    @if (Model.Where(u => u.Account.Owner == User.Identity.Name).ToList().Count > 0)
    {
        @Html.ActionLink("Create New", "Create");
    }
    else
    {
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Account.Owner)
        </th>
        <th>
          Transaction Date
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Account.Owner)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransactionDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @if (item.Account.Owner == User.Identity.Name) {
            @Html.ActionLink("Edit |", "Edit", new { id = item.Id }) 
